/**app.wxss**/
@import "pages/common/weui.wxss";
@import "pages/common/iconfont.wxss";
page{
  min-height: 100%;
  background-color:#F8F8F8;
}
.main_box{
}
.main_box__scroll{
  min-height: 100vh;
  background:#575757;
}

.main_list {
  display: flex;
  width:calc(100vw - 20px);
  padding-left:10px;
  flex-wrap:wrap;
  justify-content:space-between;
  overflow:hidden;
}



.main_list__li{
  width:46vw;
  height:56vw;
  text-align: center;
  background-size:100% auto;
  background-repeat: no-repeat;
  position: relative;
}

.main_list__li.is_lock .main_list__lock{
  display: block;
}

.main_list__bg{
  position: absolute;
  width:46vw;
  height:46vw;
  left:0;
  top:0;
}

.main_list__bg2{
  position: absolute;
  width:42.4vw;
  height:42.4vw;
  left:1.7vw;
  top:1.7vw;
  background:#fff;
}


.main_list__img{
  position: absolute;
  width:39vw;
  height:39vw;
  left:3.4vw;
  top:3.4vw;
}
.main_list__text{
  position:absolute;
  width:100%;
  left:0;
  bottom:3vw;
  color:#fff;
  font-size:16px;
}
.main_list__lock{
  display: none;
  position:absolute;
  width:16vw;
  height:16vw;
  left:50%;
  top:12vw;
  margin-left:-8vw;
  background:#000;
  border:.3vw solid #fff;
  border-radius: 100%;
  line-height:16vw;
  opacity: .4;
}
.main_list__lock:before{
  color:#fff;
  font-size:7vw;
}



.footer{
  padding:8vw 0;
}